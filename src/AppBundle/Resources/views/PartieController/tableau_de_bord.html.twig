{% extends "::base.html.twig" %}

{% block title %}Partie en cours{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <h1 class="col-sm-12">Tableau de bord</h1>
        </div>
        <div class="row" id="zone-joueurs">
            
        </div>
        <div class="row">
            <div class="col-sm-12" id="zone-mes-cartes">
                
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        
        function chargerZonesDynamiques(){
            
            $('#zone-joueurs').load("{{ path("zone_joueurs_ajax") }}");
            $('#zone-mes-cartes').load("{{ path("zone_mes_cartes_ajax") }}");
        }
        
        setInterval( chargerZonesDynamiques, 1000 );
    </script>
{% endblock %}
