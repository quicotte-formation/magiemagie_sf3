{% extends "::base.html.twig" %}

{% block title %}Partie en cours{% endblock %}

{% block body %}
    <div class="container">
        <div class="row" id="zone-joueurs">
            
        </div>
        <div class="row" id="zone-mes-cartes">
            
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        
        function chargerZonesDynamiques(){
            
            $('#zone-joueurs').load("{{ path("zone_joueurs_ajax") }}");
            $('#zone-mes-cartes').load("{{ path("zone_mes_cartes_ajax") }}");
        }
        
        setInterval( chargerZonesDynamiques, 5000 );
    </script>
{% endblock %}
